{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "This extension helps you record and share help videos with ease.",
    "icons": {
        "128": "logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo.png",
            "32": "logo.png",
            "128": "logo.png"
        }
    },
    "host_permissions": [
        "http://*/",
        "https://*/*"
    ],
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "desktopCapture"
    ],
    "version": "1.0.0"
}